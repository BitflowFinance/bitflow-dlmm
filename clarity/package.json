{
  "name": "bitflow-dlmm-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "clarigen && clarigen docs && vitest run",
    "test:report": "clarigen && clarigen docs && vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "genhtml": "genhtml lcov.info --branch-coverage -o coverage/",
    "build": "clarigen && clarigen docs",
    "build:docs": "clarigen docs",
    "build:coverage": "clarigen && clarigen docs && vitest run -- --coverage --costs && genhtml lcov.info --branch-coverage -o coverage/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@clarigen/cli": "2.1.3",
    "@clarigen/core": "2.1.3",
    "@clarigen/test": "2.1.3",
    "@hirosystems/clarinet-sdk": "^2.16.0",
    "@stacks/transactions": "^6.13.0",
    "chokidar-cli": "^3.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.1.0",
    "vitest": "^3.0.0",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "prettier": {
    "singleQuote": true
  }
}
